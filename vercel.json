{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "includeFiles": [
                    "api/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "PYTHONPATH": "/var/task",
        "FLASK_ENV": "production",
        "CHROME_PATH": "/opt/google/chrome/chrome",
        "DISPLAY": ":99",
        "PYTHONUNBUFFERED": "1",
        "SELENIUM_WIRE_SSL_VERIFY": "false",
        "CHROME_IGNORE_CERTIFICATE_ERRORS": "1"
    }
}
